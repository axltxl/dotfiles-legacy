#!/usr/bin/env zsh
##################################
# Install vagrant and virtualbox
##################################

. $ZSH_HOME/lib/printf

VAGRANT_VER=1.7.2
VAGRANT_DEB=vagrant_${VAGRANT_VER}_x86_64.deb
VAGRANT_URL=https://dl.bintray.com/mitchellh/vagrant/$VAGRANT_DEB

VBOX_DEB=virtualbox-4.3_4.3.26-98988~Ubuntu~raring_amd64.deb
VBOX_URL=http://download.virtualbox.org/virtualbox/4.3.26/virtualbox-4.3_4.3.26-98988~Ubuntu~raring_amd64.deb

cd /tmp

printf_install vagrant
wget $VAGRANT_URL -O $VAGRANT_DEB && sudo dpkg -i $VAGRANT_DEB
rm $VAGRANT_DEB

printf_install VirtualBox
wget  $VBOX_URL && sudo dpkg -i $VBOX_DEB

sudo apt-get -fy install
