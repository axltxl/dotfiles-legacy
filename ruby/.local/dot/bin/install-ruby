#!/usr/bin/env zsh
##################################
# Install ruby via rvm locally on $DOT_PATH
##################################

autoload dot_printf_install

rvm_home=~/.rvm

dot_printf_install rvm
gpg --keyserver hkp://keys.gnupg.net \
    --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 > /dev/null
curl -sSL https://get.rvm.io | bash -s stable
source $rvm_home/scripts/rvm

dot_printf_install rubies
rvm install 1.9.3
rvm install 2.2.1 --default

dot_printf_install "basic gems"
gem install bundler rake

