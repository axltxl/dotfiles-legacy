# vim: ft=zsh
#########################
# Update X11 settings
#########################

_dot_update_help() {
    echo "apply xmodmap settings and update xresources configuration"
}

_dot_update_exec() {
    if [[ ! -z "$DISPLAY" ]]; then
        # Update .Xresources
        dot_printf "Update xresources"
        config-xrdb
    fi
}

