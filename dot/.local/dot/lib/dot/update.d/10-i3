# vim: ft=zsh
#########################
# Update i3 configuration
#########################

_dot_update_help() {
    echo "regenerate i3wm configuration"
}

_dot_update_exec() {
    # Make sure latest i3 config gets generated
    dot_printf "regenerate i3 configuration file"
    config-i3

    # Reload configuration
    dot_printf "restarting i3"
    i3-msg restart > /dev/null
}
