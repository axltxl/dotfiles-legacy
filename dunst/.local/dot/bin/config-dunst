#!/usr/bin/env zsh
###########################
# dunst colorscheme generator
###########################

# essential variables
dunst_conf_dir=${HOME}/.config/dunst
dunst_conf=${dunst_conf_dir}/dunstrc

# first of all, remove current config
rm -f $dunst_conf

# Generate colors python module for dunstpystatus
base16 -t dunst/config.erb > $dunst_conf
