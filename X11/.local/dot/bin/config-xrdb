#!/usr/bin/env zsh
##########################
# Xresources configuration
##########################

xrdb_dir=${HOME}/.Xresources.d
rofi_kit_ver=develop
xft_kit_ver=develop

if [[ "$1" != "--no-template" ]]; then
    # Get rofi settings
    zenfig install axltxl/zenfig-rofi==$rofi_kit_ver

    # xft settings
    zenfig install axltxl/zenfig-xft==$xft_kit_ver
fi

# Update Xresources
xrdb -merge -DSCREEN_DPI=${DISPLAY_DPI} ${HOME}/.Xresources
