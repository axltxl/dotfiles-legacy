#!/usr/bin/env zsh
##########################
# Xresources configuration
##########################

xrdb_dir=${HOME}/.Xresources.d
xrdb_file_colors=${xrdb_dir}/colors

if [[ "$1" != "--no-template" ]]; then
    # color palette is generated from a template
    # this is especially cool since switching from
    # a color scheme to another is a bliss
    base16 -t X11/colors.erb > $xrdb_file_colors
fi

# Update Xresources
xrdb -merge -DSCREEN_DPI=${DISPLAY_DPI} ${HOME}/.Xresources
