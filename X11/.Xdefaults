!! source: https://gist.github.com/yevgenko/1167205#file-xdefaults-L16
!-------------------------------------------------------------------------------
!! Xft settings
!!-------------------------------------------------------------------------------

!Xft.dpi:                    96
!Xft.antialias:              false
!Xft.rgba:                   rgb
!Xft.hinting:                true
!Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
!Essentials
!-------------------------------------------------------------------------------
URxvt*loginShell: true
URxvt*saveLines:  0

!-------------------------------------------------------------------------------
! Fonts
!-------------------------------------------------------------------------------
URxvt.font:       xft:Terminess Powerline
!URxvt.letterSpace: -1

!-------------------------------------------------------------------------------
! Scrollbar
!-------------------------------------------------------------------------------
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

!-------------------------------------------------------------------------------
! Cursor
!-------------------------------------------------------------------------------
URxvt.cursorBlink:          true
URxvt.cursorColor:          #fafb28
URxvt.cursorUnderline:      false

!-------------------------------------------------------------------------------
! Perl extensions
!-------------------------------------------------------------------------------
URxvt.perl-ext-common:      default,matcher,clipboard,fullscreen
URxvt.matcher.button:       1
URxvt.urlLauncher:          chromium

!-------------------------------------------------------------------------------
!enable copy/paste using Ctrl+Shift+c/Ctrl+Shift+v
!-------------------------------------------------------------------------------
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

!-------------------------------------------------------------------------------
! Fullscreen suppport
!-------------------------------------------------------------------------------
URxvt.keysym.F11: perl:fullscreen:switch

!-------------------------------------------------------------------------------
! Molokai theme
!-------------------------------------------------------------------------------
URxvt.depth: 32
URxvt*background: [92]#101010
URxvt*foreground: #d0d0d0
URxvt*color0: #101010
URxvt*color1: #960050
URxvt*color2: #66aa11
URxvt*color3: #c47f2c
URxvt*color4: #30309b
URxvt*color5: #7e40a5
URxvt*color6: #3579a8
URxvt*color7: #9999aa
URxvt*color8: #303030
URxvt*color9: #ff0090
URxvt*color10: #80ff00
URxvt*color11: #ffba68
URxvt*color12: #5f5fee
URxvt*color13: #bb88dd
URxvt*color14: #4eb4fa
URxvt*color15: #d0d0d0

!-------------------------------------------------------------------------------
! with this set to true, when an app sends a bell to the terminal,
! awesome hilights the appropriate tag(s) ;)
!-------------------------------------------------------------------------------
URxvt*urgentOnBell: true
