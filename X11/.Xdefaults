!! source: https://gist.github.com/yevgenko/1167205#file-xdefaults-L16
!-------------------------------------------------------------------------------
!! Xft settings
!!-------------------------------------------------------------------------------

!Xft.dpi:                    96
!Xft.antialias:              false
!Xft.rgba:                   rgb
!Xft.hinting:                true
!Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
!Essentials
!-------------------------------------------------------------------------------
URxvt*loginShell: true
URxvt*saveLines:  0

!-------------------------------------------------------------------------------
! Fonts
!-------------------------------------------------------------------------------
URxvt.font: xft:Terminess Powerline:pixelsize=14:antialias=false:hinting=false
!URxvt.letterSpace: -1

!-------------------------------------------------------------------------------
! Scrollbar
!-------------------------------------------------------------------------------
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

!-------------------------------------------------------------------------------
! Cursor
!-------------------------------------------------------------------------------
URxvt.cursorBlink:          true
URxvt.cursorColor:          #fafb28
URxvt.cursorUnderline:      false

!-------------------------------------------------------------------------------
! Perl extensions
!-------------------------------------------------------------------------------
URxvt.perl-ext-common:      default,matcher,clipboard,fullscreen
URxvt.matcher.button:       1
URxvt.urlLauncher:          chromium

!-------------------------------------------------------------------------------
!enable copy/paste using Ctrl+Shift+c/Ctrl+Shift+v
!-------------------------------------------------------------------------------
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

!-------------------------------------------------------------------------------
! 32-bit as color depth
!-------------------------------------------------------------------------------
URxvt.depth: 32

!-------------------------------------------------------------------------------
! Colorscheme: Behelit
!-------------------------------------------------------------------------------
URxvt.background:    [95]#101010
URxvt.foreground:    #60ff60
URxvt.cursorColor:   #60ff60

! black
URxvt.color0:        #1c1c1c
URxvt.color8:        #4d4d4d

! red
URxvt.color1:        #d81860
URxvt.color9:        #f00060

! green
URxvt.color2:        #60ff60
URxvt.color10:       #70ff70

! yellow
URxvt.color3:        #f9fd75
URxvt.color11:       #f9fd80

! blue
URxvt.color4:        #5d97fa
URxvt.color12:       #679dfa

! magenta
URxvt.color5:        #a78edb
URxvt.color13:       #ad97db

! cyan
URxvt.color6:        #4695c8
URxvt.color14:       #5a9dc8

! white
URxvt.color7:        #f3ebe2
URxvt.color15:       #eeeeee

!-------------------------------------------------------------------------------
! with this set to true, when an app sends a bell to the terminal,
! awesome hilights the appropriate tag(s) ;)
!-------------------------------------------------------------------------------
URxvt*urgentOnBell: true
