#!/usr/bin/env zsh
##################################
# Install essential packages
##################################

autoload dot_printf_install

# Essential stuff indeed
essentials=(
    curl \
    htop \
    irssi \
    links \
    tcpdump \
    sysstat \
    nethogs \
    colortest \
    curl \
    wget \
)

dot_printf_install 'Essential stuff'
sudo apt-get update && sudo apt-get -y install "${essentials[@]}"
