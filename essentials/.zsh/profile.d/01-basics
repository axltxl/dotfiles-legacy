# Extremely basics
EDITOR=vim
VISUAL=vim
PAGER=less
VISUAL=vim

# Web browser
if [ -n "$DISPLAY" ]; then
    BROWSER=google-chrome
else
    BROWSER=links
fi

# Export the whole thing
export EDITOR PAGER VISUAL BROWSER

# Settings for the terminal
export TERM=xterm
export TERMINFO=${DOT_PATH}/share/terminfo
