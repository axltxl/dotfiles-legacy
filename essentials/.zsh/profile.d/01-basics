# Extremely basics
EDITOR=vim
VISUAL=vim
PAGER=less
VISUAL=vim

# Web browser
if [ -n "$DISPLAY" ]; then
    BROWSER=chromium
else
    BROWSER=links
fi

# Export the whole thing
export EDITOR PAGER VISUAL BROWSER

# Terminal settings
export TERM=xterm-256color
export TERMINFO=${DOT_PATH}/share/terminfo
