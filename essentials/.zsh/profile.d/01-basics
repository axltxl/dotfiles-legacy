#################
# The very basics
#################

export EDITOR=vim
export VISUAL=vim
export PAGER=less
export VISUAL=vim

# Web browser
if [ -n "$DISPLAY" ]; then
    BROWSER=chromium
else
    BROWSER=links
fi
export BROWSER

###################
# Terminal settings
###################
if [[ -z "$TMUX" ]] ;then
    export TERM=xterm-256color
fi
export TERMINFO=${DOT_PATH}/share/terminfo
