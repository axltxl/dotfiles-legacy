#!/usr/bin/env zsh
#####################################
# volnoti-show wrapper for indicating
# audio and brightness status
#####################################
set -e

# mute indicator
if [[ "$1" == "mute" ]]; then
    volnoti-show --mute -n
# screen brightness indicator
elif [[ "$1" == "brightness" ]]; then
    brightness=$(xbacklight)
    [[ -z "$brightness" ]] && brightness=0
    volnoti-show -s "${DOT_PATH}/share/pixmaps/volnoti/display-brightness-symbolic.svg" $brightness &
else
    # show volume
    volnoti-show $(pavol get-volume) &
fi

