# vim: ft=dosini cms=#%s
[options]
scroll_on_output    = false
scroll_on_keystroke = true
audible_bell        = false
mouse_autohide      = false
allow_bold          = true
dynamic_title       = true
urgent_on_bell      = true
clickable_url       = true
font                = Terminess Powerline 14
scrollback_lines    = 10000
search_wrap         = true

# "system", "on" or "off"
cursor_blink = system

# "block", "underline" or "ibeam"
cursor_shape = block

# set size hints for the window
size_hints   = false

# Hide links that are no longer valid in url select overlay mode
filter_unmatched_urls = true

# emit escape sequences for other keys modified by Control
#modify_other_keys = false
<% bg = @base["00"]["rgb"] %>

[colors]
cursor          = #<%= @base["0A"]["hex"] %>
foreground      = #<%= @base["07"]["hex"] %>
foreground_bold = #<%= @base["07"]["hex"] %>
background      = rgba(<%= bg[0] %>, <%= bg[1] %>, <%= bg[2] %>, 0.9)

# if unset, will reverse foreground and background
#highlight = #2f2f2f

# colors from color0 to color254 can be set
color0  = #<%= @base["01"]["hex"] %>
color1  = #<%= @base["09"]["hex"] %>
color2  = #<%= @base["0B"]["hex"] %>
color3  = #<%= @base["0A"]["hex"] %>
color4  = #<%= @base["0C"]["hex"] %>
color5  = #<%= @base["0E"]["hex"] %>
color6  = #<%= @base["0C"]["hex"] %>
color7  = #<%= @base["07"]["hex"] %>
color8  = #<%= @base["00"]["hex"] %>
color9  = #<%= @base["08"]["hex"] %>
color10 = #<%= @base["0B"]["hex"] %>
color11 = #<%= @base["0A"]["hex"] %>
color12 = #<%= @base["0D"]["hex"] %>
color13 = #<%= @base["0E"]["hex"] %>
color14 = #<%= @base["0C"]["hex"] %>
color15 = #<%= @base["06"]["hex"] %>
