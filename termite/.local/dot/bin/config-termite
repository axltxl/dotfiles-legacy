#!/usr/bin/env zsh
set -e
###########################
# termite colorscheme generator
###########################

# essential variables
termite_tpl_dir=${HOME}/.local/share/zenfig/templates/termite
termite_conf_dir=${HOME}/.config/termite
termite_conf=${termite_conf_dir}/config

# first of all, remove current config
rm -f $termite_conf

# Generate colors python module for termitepystatus
zenfig $termite_tpl_dir > $termite_conf
