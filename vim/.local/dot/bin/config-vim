#!/usr/bin/env zsh
###########################
# vim colorscheme generator
###########################

# essential variables
vim_home=${HOME}/.vim
vim_conf_dir=${vim_home}/colors
vim_conf=${vim_conf_dir}/base16.vim
vim_airline_themes=${vim_home}/plugged/vim-airline/autoload/airline/themes
vim_airline_conf=${vim_airline_themes}/dot.vim

# first of all, remove current config
rm -f $vim_conf

# Generate colors python module for vimpystatus
base16 -t vim/colorscheme.erb > $vim_conf

# Generate colors python module for vimpystatus
base16 -t vim/vim-airline.erb > $vim_airline_conf
