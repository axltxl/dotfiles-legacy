{#
 ###################################
 # i3wm base configuration variables
 ##################################
 # vim: ft=jinja
 #}

# One prefix to rule them all
set $mod {{ i3_key_mod|default('Mod1') }}
set $alt {{ i3_key_alt|default('Shift') }}

# Font-related variable
set $font pango: {{ font|default('DejaVu Sans') }}
set $font_size   {{ (font_size-2)|default(10) }}

# i3lock wrapper
set $autolock screenlock

# music player
set $mplayer spotify
set $mplayer_class Spotify

# wallpaper manager
set $wpman nitrogen
set $wpman_class Nitrogen

# sound manager
set $sndman pavucontrol
set $sndman_class Pavucontrol

# file manager
set $fm pcmanfm
set $fm_class Pcmanfm

# www browser
set $browser chromium
set $browser_class chromium-browser

# terminal of choice
set $term {{ term|default('i3-sensible-terminal') }}
set $term_class {{ x11_winclass_term|default('UXrvt') }}

# i3pystatus
set $i3pystatus_py   ~/.i3/pystatus/bin/python3
set $i3pystatus_conf ~/.i3/status.py

# workspaces
set $ws_term ""
set $ws_www  ""
set $ws3     " 3"
set $ws4     " 4"
set $ws5     " 5"
set $ws6     " 6"
set $ws7     " 7"
set $ws8     " 8"
# this workspace should be used for messengers
set $ws_msgr  ""
set $ws_music ""

# screenshot keys
set $scrot_path "$HOME/Pictures/screenshot-%Y%m%d%H%M%S.jpg"
set $scrot_quality 90
set $scrot_notify 'Screenshot saved'

# volnoti settings
set $volnoti_timeout 1
set $volnoti_opacity 0.20
set $volnoti_radius  40

# audio controls
set $audio_vol_up "exec --no-startup-id pavol plus;  exec --no-startup-id volnoti-pop plus; exec dot-snd-play blop"
set $audio_vol_dn "exec --no-startup-id pavol minus; exec --no-startup-id volnoti-pop minus; exec dot-snd-play blop"
set $audio_mute   "exec --no-startup-id pavol mute;  exec --no-startup-id volnoti-pop mute; exec dot-snd-play blop"

# media player controls
set $playerctl_play  "exec playerctl play-pause"
set $playerctl_pause "exec playerctl pause"
set $playerctl_next  "exec playerctl next"
set $playerctl_prev  "exec playerctl previous"

# bar settings
set $bar_position top

# tray settings
set $tray_padding 4
