#!/usr/bin/env zsh
#####################
# i3 config generator
#####################

# Essential variables
i3_home=${HOME}/.i3
i3_conf=${i3_home}/config
i3_kit_ver=develop

# first of all, remove current config
rm -f $i3_conf

# Generate colors for i3pystatus
zenfig install axltxl/zenfig-i3==$i3_kit_ver
