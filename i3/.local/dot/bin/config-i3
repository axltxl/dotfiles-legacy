#!/usr/bin/env zsh
#####################
# i3 config generator
#####################

# Essential variables
i3_home=${HOME}/.i3
i3_conf=${i3_home}/config
i3_tpl_dir=${HOME}/.local/share/zenfig/templates/i3

# first of all, remove current config
rm -f $i3_conf

# Generate config file from templates
zenfig $i3_tpl_dir -o $i3_conf
