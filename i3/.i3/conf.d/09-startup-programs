######################
# Startup programs
######################

# compositing manager
exec --no-startup-id compton

# wicd-gtk on the tray
exec wicd-gtk --tray

# xautolock
exec --no-startup-id xautolock -time 8 -locker $autolock

# set wallpapers
exec --no-startup-id nitrogen --restore

# pulseaudio
exec pulseaudio --start

# stow watch monitoring daemon
exec dot-stow-manager

# dunst takes charge as the notification daemon
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc

